<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarStyle="outsideOverlay" >

    <LinearLayout
        android:id="@+id/air_main_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/air_window"
            android:layout_width="fill_parent"
            android:layout_height="250dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/air_bg_on"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/image_wind_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/image_wind_dir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/temp_show"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#222222"
                    android:textSize="60sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/airButtons1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/air_power"
                android:layout_width="wrap_content"
                android:layout_height="52.0dip"
                android:background="@drawable/power_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="50.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="0.0dip"
                android:shadowColor="#ff000000"
                android:shadowDy="1.0"
                android:shadowRadius="1.0" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.0dip"
            android:src="@drawable/device_select_separator" />

        <LinearLayout
            android:id="@+id/airButtons2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23.0dip"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/air_tempadd"
                android:layout_width="0.0dip"
                android:layout_height="52.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/normal_button_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="5.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="0.0dip"
                android:shadowColor="#ff000000"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="@string/air_tempadd"
                android:textColor="#ffacaeb0"
                android:textSize="13.0dip" />

            <Button
                android:id="@+id/air_mode"
                android:layout_width="0.0dip"
                android:layout_height="52.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/normal_button_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="6.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="0.0dip"
                android:shadowColor="#ff000000"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="@string/air_mode"
                android:textColor="#ffacaeb0"
                android:textSize="13.0dip" />

            <Button
                android:id="@+id/air_tempsub"
                android:layout_width="0.0dip"
                android:layout_height="52.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/normal_button_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="6.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="0.0dip"
                android:shadowColor="#ff000000"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="@string/air_tempsub"
                android:textColor="#ffacaeb0"
                android:textSize="13.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/airButtons2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23.0dip"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/air_wind_count"
                android:layout_width="0.0dip"
                android:layout_height="52.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/normal_button_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="5.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="0.0dip"
                android:shadowColor="#ff000000"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="@string/air_wind_count"
                android:textColor="#ffacaeb0"
                android:textSize="13.0dip" />

            <Button
                android:id="@+id/air_wind_dir"
                android:layout_width="0.0dip"
                android:layout_height="52.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/normal_button_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="6.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="0.0dip"
                android:shadowColor="#ff000000"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="@string/air_wind_dir"
                android:textColor="#ffacaeb0"
                android:textSize="13.0dip" />

            <Button
                android:id="@+id/air_wind_auto_dir"
                android:layout_width="0.0dip"
                android:layout_height="52.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/normal_button_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="6.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingTop="0.0dip"
                android:shadowColor="#ff000000"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="@string/air_wind_auto_dir"
                android:textColor="#ffacaeb0"
                android:textSize="13.0dip" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>