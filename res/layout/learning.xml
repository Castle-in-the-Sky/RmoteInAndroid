<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/device_select_bg"
    android:orientation="vertical"
    android:padding="0.0dip" >
<RelativeLayout
        android:id="@+id/learn_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dip"
        android:gravity="center" >

        <TextView
            android:id="@+id/studying_Remote"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center"
            android:shadowColor="#ff000000"
            android:shadowDy="-1.0"
            android:shadowRadius="2.0"
            android:text="@string/title_studying"
            android:textColor="#ff7d8081"
            android:textSize="18.0dip"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/quit_learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/control_settings_close" />
      
    </RelativeLayout>
   
 <FrameLayout android:id="@+id/learnlist" android:background="@drawable/popup_clone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="50.0dip" android:layout_below="@id/learn_title_rl">
        <LinearLayout
         android:id="@+id/learn_info_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
      
        android:layout_marginTop="10.0dip"
        android:orientation="vertical"
        android:background="@drawable/popup_clone" >

  		  <TextView
        android:id="@+id/learn_info"
         android:layout_marginTop="20.0dip"
         android:layout_marginLeft="20.0dip"
         android:layout_marginRight="20.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
		android:textColor="@color/text_white"
        android:text="@string/study_info" />    



        <ProgressBar
            android:id="@+id/progressBar_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/study_loading"
            android:textColor="@color/text_white" />
     
    
 <SurfaceView
            android:id="@+id/decode_show"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

  </LinearLayout>
       
        <View android:background="@drawable/setup_clone" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </FrameLayout>
   <include layout="@layout/createdby" />
</RelativeLayout>